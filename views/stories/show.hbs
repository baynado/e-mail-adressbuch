<div class="row">
    <div class="col s12 m8">
        <h3>{{story.name}} 
            <small>{{{editIcon story.user user story._id false}}}</small>
        </h3>
        <h4>({{story.title}})</h4>
        <div class="card story">
            <div class="card-content">
                <span class="card-title">Erstellt am {{formatDate date 'DD.MM.YYYY, HH:mm:ss'}}</span>
                <h4>Bemerkung zur E-Mailadresse</h4>
                {{{story.body}}}
            </div>
        </div>
    </div>
    <div class="col s12 m4">
        <div class="card center-align">
            <div class="card-content">
                <span class="card-title">{{story.user.displayName}}</span>
                <img src="https://cdn.pixabay.com/photo/2018/04/18/18/56/user-3331257_960_720.png" class="circle responsive-img img-small">
            </div>
            <div class="card-action">
                <a href="/stories/user/{{story.user._id}}">Mehr von {{story.user.firstName}}</a>
            </div>
        </div>
    </div>
</div>